{
  "desc": "Get the identity of a user who has authorized Sign in with Slack.",
  "http_method": "POST",
  "scope": "openid",
  "user_scope_only": true,
  "scope_by_token_type": {
    "oauth": "openid"
  },
  "rate_limits": "t3",
  "args": {
    "type": "object",
    "required": [
      "token"
    ],
    "properties": {
      "token": {
        "type": "string",
        "subtype": "auth",
        "desc": "Authentication token bearing required scopes. Tokens should be passed as an HTTP Authorization header or alternatively, as a POST parameter.",
        "example": "xxxx-xxxxxxxxx-xxxx"
      }
    }
  },
  "output": {
    "required": [
      "sub",
      "https://slack.com/user_id"
    ],
    "type": "object",
    "properties": {
      "sub": {
        "type": "string"
      },
      "https://slack.com/user_id": {
        "type": "string"
      },
      "https://slack.com/team_id": {
        "type": "string"
      },
      "https://slack.com/enterprise_id": {
        "type": "string"
      },
      "email": {
        "type": "string"
      },
      "email_verified": {
        "type": "boolean"
      },
      "date_email_verified": {
        "type": "integer"
      },
      "locale": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "given_name": {
        "type": "string"
      },
      "family_name": {
        "type": "string"
      },
      "picture": {
        "type": "string"
      },
      "https://slack.com/user_image_24": {
